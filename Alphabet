CODE	SEGMENT
ASSUME	CS:CODE,DS:CODE,ES:CODE,SS:CODE
	;
PPIC_C	EQU	1FH
PPIC	EQU	1DH
PPIB	EQU	1BH
PPIA	EQU	19H
	;	
	ORG	1000H

	MOV	AL,10000000B
	OUT	PPIC_C,AL
	;
	MOV	AL,11110000B
	OUT	PPIB,AL
	;
	MOV	AL,00000000B
	OUT	PPIC,AL
	;
	 
	   
	   
	   
	 
	L1:	MOV	AL,11111110B
	OUT	PPIA,AL
	CALL	TIMER  
	CALL LETTER    
	
	;f
	MOV	AL,11011111B
	OUT	PPIA,AL
	CALL	TIMER 
	CALL LETTER 
	             
	;e
	MOV	AL,11101111B
	OUT	PPIA,AL
	CALL	TIMER 
	CALL LETTER 
	
	;d
	MOV	AL,11110111B
	OUT	PPIA,AL
    CALL	TIMER  
	CALL LETTER 
	
	;c
	MOV	AL,11111011B
	OUT	PPIA,AL
	CALL	TIMER 
	CALL LETTER  
	              
	;b
	MOV	AL,11011101B
	OUT	PPIA,AL
	CALL	TIMER  
	CALL LETTER
	
	
	
	JMP L1 
	 
	 
	   
	
	LETTER PROC 
	      
	;A letter

	MOV	AL,10001000B
	OUT	PPIA,AL
	CALL	TIMER      
	
	;B letter
	MOV	AL,10000000B
	OUT	PPIA,AL
    CALL	TIMER  
	             
	;C letter
	MOV	AL,11000110B
	OUT	PPIA,AL
	CALL	TIMER  
	
	;D letter
	MOV	AL,11000000B
	OUT	PPIA,AL
	CALL	TIMER   
	
	;E letter 
	MOV	AL,10000110B
	OUT	PPIA,AL
	CALL	TIMER   
	             
	;F letter
	MOV	AL,10001110B
	OUT	PPIA,AL
    CALL	TIMER 
	
	RET
	                  
	LETTER ENDP 
	
	
	
	
	;
	;INT	3
	;	
	
TIMER:	MOV	CX,0
TIMER1:	NOP
		NOP
		NOP
		NOP
		LOOP TIMER1
		RET
	;

CODE	ENDS
	END
